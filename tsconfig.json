{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "experimentalDecorators": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noUncheckedIndexedAccess": true,
      "skipLibCheck": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": true,
      "typeRoots": ["node_modules/@types", "../node_modules/@types", "src/typings/**/*.d.ts", "reflect-metadata"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }
  